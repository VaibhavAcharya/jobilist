model Batch {
  id String @id @default(uuid())

  email String
  website String

  name String
  description String?

  logoURL String?
  color String?

  expiresAt DateTime

  createdAt DateTime @default(now())

  posts Post[]
}

model Post {
  id String @id @default(uuid())

  title String
  type String
  location String

  salaryStart Decimal
  salaryEnd Decimal

  applyLink String?
  applyEmail String?

  description String?
  tags String[]

  pinExpiresAt DateTime?

  createdAt DateTime @default(now())

  batchID String
  Batch Batch @relation(fields: [batchID], references: [id], onUpdate: Cascade, onDelete: Cascade)
}
